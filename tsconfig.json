{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,                     /* Satt til false for å gjøre TypeScript mindre strengt */
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": false,              /* Lar deg bruke implisitt 'any' type */
    "strictNullChecks": false,           /* Deaktiverer strenge null-sjekker */
    "strictFunctionTypes": false,        /* Mindre strengt på funksjon parameter-typer */
    "strictPropertyInitialization": false, /* Ikke krev at class properties må initialiseres */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "tailwind.config.js"],
  "exclude": ["node_modules"]
}